{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Add this line
    "paths": {       // Add this section
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/seller/allParcels/page.jsx",
    "app/seller/page.jsx",
    "components/DrawerBox.jsx",
    "components/RegisterParcel.jsx",
    "components/SellerCard.jsx",
    "components/DrawerBoxService.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
